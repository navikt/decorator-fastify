{
  "name": "decorator-next",
  "private": "true",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "dev": "concurrently \"bun run --cwd packages/client dev\" \"bun run --cwd packages/server dev\"",
    "build": "bun run --cwd packages/client build && cp -r packages/client/dist/assets packages/server/public/",
    "serve": "bun run --cwd packages/server serve",
    "prepare": "husky install",
    "benchmarking": "bun run ./benchmarking/index.ts",
    "clean": "rm -rf node_modules packages/**/node_modules bun.lockb packages/**/bun.lockb"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "concurrently": "^8.2.0",
    "eslint": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}
