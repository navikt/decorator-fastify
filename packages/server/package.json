{
  "name": "decorator-server",
  "version": "0.0.1",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "serve": "NODE_ENV=production bun src/server.ts",
    "serve-local": "NODE_ENV=production HOST=http://localhost:8089 IS_LOCAL_PROD='true' bun src/server.ts",
    "clean": "rm -rf ./public/assets",
    "build": "bun run clean && NODE_ENV=production bun run build.ts",
    "test": "bun test"
  },
  "dependencies": {
    "decorator-client": "workspace:*",
    "decorator-shared": "workspace:*"
  },
  "devDependencies": {
    "bun-types": "1.0.5",
    "postcss": "^8.4.30",
    "postcss-modules": "^6.0.0"
  }
}
