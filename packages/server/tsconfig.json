{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "types": ["bun-types"],
    "paths": {
        "@styles/*": ["./styles/*"],
    }
  },
  "exclude": ["**/*.stories.ts"]
}
