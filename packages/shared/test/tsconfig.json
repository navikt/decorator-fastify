{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "../",
    "types": [
        "bun-types"
    ],
    "paths": {
       "lib/*": ["../*"]
    },
    "composite": true,
    "isolatedModules": true
  },
  "include": [
    "**/*",
    "../**/*"
  ]
}
